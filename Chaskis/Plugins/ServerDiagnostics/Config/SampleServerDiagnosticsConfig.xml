<?xml version="1.0" encoding="utf-8" ?>

<!--
Server Diagnostics Config

By default, all commands are @botName: command

Modify the regexes for each tag to change this.  If you do not want the bot
to respond to a command, either leave it blank or delete the line completely.

{%nick%} is replaced with the bot's name
-->
<serverdiagnostics>
    <utimecmd>[!@]{%nick%}:?\s+utime</utimecmd>
    <osverscmd>[!@]{%nick%}:?\s+osversion</osverscmd>
    <proccountcmd>[!@]{%nick%}:?\s+processorcount</proccountcmd>
    <timecmd>[!@]{%nick%}:?\s+time</timecmd>
</serverdiagnostics>